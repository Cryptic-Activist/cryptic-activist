{
  "name": "backend",
  "version": "1.0.0",
  "main": "src/server.js",
  "license": "MIT",
  "engines": {
    "node": "^22"
  },
  "scripts": {
    "build": "tsup src",
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "lint": "eslint --fix",
    "build:base-ca": "cd ./libraries/base-ca && npm ci && npm run build",
    "build:cryptic-utils": "cd ./libraries/cryptic-utils && npm ci && npm run build",
    "migrate:dev": "cd libraries/base-ca && npx prisma migrate dev",
    "bootstrap": "npm run build:base-ca && npm run build:cryptic-utils"
  },
  "lint-staged": {
    "**/*.{json,js,ts,jsx,tsx,html}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@swc/core": "^1.11.13",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.13.8",
    "@types/nodemailer": "^6.4.17",
    "@types/sanitize-html": "^2.13.0",
    "@types/uuid": "^10.0.0",
    "eslint": "^9.21.0",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "morgan": "^1.10.0",
    "prettier": "^3.5.3",
    "prisma": "^6.4.1",
    "tsup": "^8.4.0",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.25.0"
  },
  "dependencies": {
    "@prisma/client": "^6.4.1",
    "axios": "^1.8.1",
    "base-ca": "file:./libraries/base-ca",
    "bcryptjs": "^3.0.2",
    "chalk": "^5.4.1",
    "cors": "^2.8.5",
    "cryptic-utils": "file:./libraries/cryptic-utils",
    "dotenv": "^16.4.7",
    "ethers": "^6.13.5",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.10.1",
    "sanitize-html": "^2.14.0",
    "socket.io": "^4.8.1",
    "uuid": "^11.1.0",
    "web-push": "^3.6.7",
    "zod": "^3.24.2"
  }
}
