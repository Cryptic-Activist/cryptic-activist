{
  "name": "backend",
  "version": "1.0.0",
  "main": "src/server.js",
  "license": "MIT",
  "engines": {
    "node": "^22"
  },
  "scripts": {
    "build": "tsup src",
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "migrate:dev": "npx prisma db push && npx prisma generate",
    "migrate:reset": "npx prisma migrate reset --force && npx prisma migrate dev",
    "lint": "eslint --fix",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org cryptic-activist --project cryptic-activist-backend ./dist && sentry-cli sourcemaps upload --org cryptic-activist --project cryptic-activist-backend ./dist",
    "seed:admin": "tsx src/scripts/create-initial-admin.ts",
    "seed:platform": "tsx src/scripts/seed-initial-platform-data.ts",
    "seed:all": "npm run seed:admin && npm run seed:platform",
    "hardreset": "npm run migrate:reset && npm run seed:all"
  },
  "lint-staged": {
    "**/*.{json,js,ts,jsx,tsx,html}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@swc/core": "^1.11.13",
    "@types/amqplib": "^0.10.7",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.13.8",
    "@types/nodemailer": "^6.4.17",
    "@types/qrcode": "^1.5.5",
    "@types/sanitize-html": "^2.13.0",
    "@types/speakeasy": "^2.0.10",
    "@types/uuid": "^10.0.0",
    "eslint": "^9.21.0",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "morgan": "^1.10.0",
    "prettier": "^3.5.3",
    "prisma": "^6.6.0",
    "tsup": "^8.4.0",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.25.0"
  },
  "dependencies": {
    "@prisma/client": "^6.6.0",
    "@sentry/cli": "^2.45.0",
    "@sentry/node": "^9.17.0",
    "@types/multer": "^1.4.13",
    "@types/semver": "^7.7.0",
    "amqplib": "^0.10.8",
    "aws-sdk": "^2.1692.0",
    "axios": "^1.8.1",
    "bcryptjs": "^3.0.2",
    "bip39": "^3.1.0",
    "chalk": "^5.4.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "ethers": "^6.13.5",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "mailtrap": "^4.1.0",
    "mongoose": "^8.13.2",
    "multer": "^2.0.1",
    "node-cron": "^4.0.7",
    "nodemailer": "^6.10.1",
    "pg": "^8.15.1",
    "pg-hstore": "^2.3.4",
    "qrcode": "^1.5.4",
    "redis": "^4.7.0",
    "sanitize-html": "^2.14.0",
    "semver": "^7.7.2",
    "sharp": "^0.34.2",
    "slugify": "^1.6.6",
    "socket.io": "^4.8.1",
    "speakeasy": "^2.0.0",
    "unique-names-generator": "^4.7.1",
    "uuid": "^11.1.0",
